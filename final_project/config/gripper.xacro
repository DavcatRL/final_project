<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="simple_gripper" params="parent_link">
  
    <material name="red">
      <color rgba="1 0 0 1"/>
    </material>
    
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>

    <!-- Base -->
    <joint name="wrist_rotate" type="fixed">
      <parent link="${parent_link}"/>
      <child link="gripper_base"/>
      <origin xyz="0 0 0.004" rpy="0 0 1.57"/>
    </joint>
    
    <link name="gripper_base">
      <visual>
        <geometry>
          <box size="0.18 0.027 0.005"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.18 0.027 0.005"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
      </collision>
      
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="3.1416667e-06" ixy="0.0" ixz="0.0" iyy="1.3510417e-04" iyz="0.0" izz="1.3803750e-04"/>
      </inertial>
    </link>

    <!-- Dito sinistro -->
    <joint name="finger_joint_left" type="prismatic">
      <parent link="gripper_base"/>
      <child link="finger_left"/>
      <origin xyz="-0.06 0.0 0.0085" rpy="0 -1.57 0"/>
      <axis xyz="0 0 -1"/>
      <limit lower="-0.05" upper="0.035" effort="10" velocity="0.05"/>
      <dynamics damping="5.0" friction="0.5"/>
    </joint>
  
    <link name="finger_left">
      <visual>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/the_crawer.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.063 0.031 0.041"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0.017 0 0.006"/>
      </collision>
    
      <inertial>
        <origin xyz="0.017 0 0.006" rpy="0 0 0"/>
        <mass value="0.025"/>
        <inertia
          ixx="5.504e-06"
          ixy="0.0"
          ixz="0.0"
          iyy="1.177e-05"
          iyz="0.0"
          izz="1.027e-05"/>
      </inertial>
    </link>  

    <!-- Dito destro -->
    <joint name="finger_joint_right" type="prismatic">
      <parent link="gripper_base"/>
      <child link="finger_right"/>
      <origin xyz="0.06 0 0.0085" rpy="3.1415 -1.57 0"/>
      <axis xyz="0 0 -1"/>
      <limit lower="-0.05" upper="0.035" effort="10" velocity="0.05"/>
      <dynamics damping="5.0" friction="0.5"/>
    </joint>
  
    <link name="finger_right">
      <visual>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/the_crawer.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.063 0.031 0.041"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0.017 0 0.006"/>
      </collision>
    
      <inertial>
        <origin xyz="0.017 0 0.006" rpy="0 0 0"/>
        <mass value="0.025"/>
        <inertia
          ixx="5.504e-06"
          ixy="0.0"
          ixz="0.0"
          iyy="1.177e-05"
          iyz="0.0"
          izz="1.027e-05"/>
      </inertial>
    </link>  

  </xacro:macro>

</robot>

